# Copy to .env and fill values
# SMTP / email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Where to send contact messages
MAIL_TO=info@lertisento.fi
# Optional: from address shown in the email
MAIL_FROM="Lertisento Website" <no-reply@lertisento.fi>

# Server
PORT=3000
# In production set to your website origin, e.g. https://lertisento.fi
CORS_ORIGIN=http://localhost:3000

# Basic anti-spam / rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=10
